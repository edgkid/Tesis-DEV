<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tegdev.optotypes.DiagnosticActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewLoginUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/boy"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="900dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/icon_on"/>

                <Button
                    android:id="@+id/idbuttonReturnListMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/list_icon"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ipWebService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="servicio: "/>
            <TextView
                android:id="@+id/ipProjector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="equipo medico: "/>
            <TextView
                android:id="@+id/portProjector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="equipo medico: "/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/idImagePhotoPatient"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/usuario_icon"/>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha: "
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/idTextPatient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paciente: "
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/idTextYears"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edad: "
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTypeTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test (AV) Aplicado: "
                    android:textSize="20dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Agudeza Visual"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idAvRsultOd"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="OD:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idAvRsultOi"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="OI:"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Prueba Subjectiva"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idSubjectiveCenter"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Centra:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idSubjectiveSustain"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Sostiene:"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/idSubjectiveMaintain"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Mantiene:"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Precepcion cromatica"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idTestColorOd"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="OD:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idTestColorOi"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="OI:"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Tonometria"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idTonometricOd"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="OD:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idTonometricOi"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="OI:"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Balance Macular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idOrtoforia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Ortoforia:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idOrtotropia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Ortotropia:"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/idForia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Foria:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/idEndoforia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Endoforia:"
                        android:textSize="20dp"/>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idExotropia"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Exotropia:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/idHipertropia"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Hipertropia:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/idDvD"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="dvd:"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idCaElevada"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="CA/A Elevada:"
                    android:textSize="20dp"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observaciones Estandar"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/idObjectiveTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/idDescripctionTestA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/idDescripctionTestB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/idDescripctionTestC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/idDescripctionTestD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent">

    </LinearLayout>




</LinearLayout>
