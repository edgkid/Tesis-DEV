<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tegdev.optotypes.DiagnosticActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewLoginUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/boy"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="900dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/icon_on"/>

                <Button
                    android:id="@+id/idbuttonReturnListMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/list_icon"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ipWebService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="servicio: "/>
            <TextView
                android:id="@+id/ipProjector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="equipo medico: "/>
            <TextView
                android:id="@+id/portProjector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="equipo medico: "/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/idImagePhotoPatient"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/usuario_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Fecha: "
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/idTextPatient"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Paciente: "
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/idTextYears"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Edad: "
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/idTypeTest"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Test (AV) Aplicado: "
                    android:textSize="20dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/idTextAvResult"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Agudeza Visual OD: OI:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/idOtherTestA"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Prueba Subjectiva: Centra, Sostiene, Mantiene"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/idOtherTestB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Precepcion cromatica OD: OI:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/idOtherTestC"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Tonometria: OD:  OI:"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idOtherTestD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance Macular:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/idDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ObservaciÃ³n:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"></LinearLayout>




</LinearLayout>
