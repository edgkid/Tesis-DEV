<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tegdev.optotypes.KeyBoardInteractionActivity"
    android:orientation="horizontal">

    <!-- left conntent -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/imageViewInteractionPatient"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/usuario_icon"/>

        <TextView
            android:id="@+id/textViewNAmePatient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Name 1 Name 2"
            android:typeface="sans"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textViewLastnamePatient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Lastname 1 Lastname 2"
            android:typeface="sans"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textYearsPatient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="edad"
            android:typeface="sans"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/opSelectedAa"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/opSelectedAb"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <ImageView
                    android:id="@+id/opSelectedAc"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/opSelectedAd"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/opSelectedBa"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <ImageView
                    android:id="@+id/opSelectedBb"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/opSelectedBc"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <ImageView
                    android:id="@+id/opSelectedBd"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/opSelectedCa"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/opSelectedCb"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <ImageView
                    android:id="@+id/opSelectedCc"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/opSelectedCd"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <!-- rigth content -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/optotypeAa"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeAb"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeAc"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeAd"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/optotypeBa"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>

            <ImageView
                android:id="@+id/optotypeBb"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeBc"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeBd"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/optotypeCa"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeCb"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeCc"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeCd"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/optotypeDa"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeDb"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeDc"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>
            <ImageView
                android:id="@+id/optotypeDd"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagenotfoud"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
